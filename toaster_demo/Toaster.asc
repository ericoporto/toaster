void game_start()
{
  SetGameSpeed(60);
  _MAX_TOAST_WIDTH = (Screen.Width * 800) / 1000;
  _toaster_toasts_init();
  _ta_set_game_speed(GetGameSpeed());
}

void repeatedly_execute_always()
{
  _toaster_toasts_update();
}